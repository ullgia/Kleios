{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Yarp": "Information"
    }
  },
  "AllowedHosts": "*",
  "RateLimiting": {
    "Auth": {
      "Window": "00:01:00",
      "PermitLimit": 10,
      "QueueLimit": 0
    },
    "Api": {
      "Window": "00:01:00",
      "PermitLimit": 100,
      "QueueLimit": 5
    },
    "Default": {
      "Window": "00:01:00",
      "PermitLimit": 200,
      "QueueLimit": 10
    }
  },
  "ReverseProxy": {
    "Routes": {
      "auth-backend-route": {
        "ClusterId": "auth-backend-cluster",
        "Match": {
          "Path": "/api/auth/{**catch-all}"
        },
        "Order": 1,
        "Metadata": {
          "RateLimitPolicy": "auth"
        }
      },
      "system-backend-route": {
        "ClusterId": "system-backend-cluster",
        "Match": {
          "Path": "/api/system/{**catch-all}"
        },
        "Order": 2,
        "Metadata": {
          "RateLimitPolicy": "api"
        }
      },
      "auth-frontend-route": {
        "ClusterId": "auth-frontend-cluster",
        "Match": {
          "Path": "/auth/{**catch-all}"
        },
        "Order": 10,
        "Metadata": {
          "RateLimitPolicy": "default"
        }
      },
      "system-frontend-route": {
        "ClusterId": "system-frontend-cluster",
        "Match": {
          "Path": "/system/{**catch-all}"
        },
        "Order": 11,
        "Metadata": {
          "RateLimitPolicy": "default"
        }
      },
      "shell-route": {
        "ClusterId": "shell-cluster",
        "Match": {
          "Path": "/{**catch-all}"
        },
        "Order": 999,
        "Metadata": {
          "RateLimitPolicy": "default"
        }
      }
    },
    "Clusters": {
      "auth-backend-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://auth-backend"
          }
        }
      },
      "system-backend-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://system-backend"
          }
        }
      },
      "auth-frontend-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://auth-module"
          }
        }
      },
      "system-frontend-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://system-module"
          }
        }
      },
      "shell-cluster": {
        "Destinations": {
          "destination1": {
            "Address": "https+http://shell"
          }
        }
      }
    }
  }
}
